{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["./lib/*"],
			"@lambda/*": ["./lambda/*"],
			"@utils/*": ["./utils/*"],
			"@data/*": ["./data/*"],
			"@codegen/*": ["./codegen/*"]
		},
		"types": ["bun-types"]
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": [
		"node_modules",
		"codegen/sams/generated/**",
		"data/migrations",
		"apps/*/src/**" // required to avoid TS errors between different app tsconfigs
	]
}
