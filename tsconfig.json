{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false,
		"jsx": "react-jsx",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"noEmit": true,

		/* Path aliases */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["./lib/*"],
			"@lambda/*": ["./lambda/*"],
			"@utils/*": ["./utils/*"],
			"@data/*": ["./data/*"],
			"@codegen/*": ["./codegen/*"]
		},

		/* Linting */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Types */
		"types": ["bun-types"]
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": [
		"node_modules",
		"codegen/sams/generated/**",
		"data/migrations",
		"apps/*/src/**" // required to avoid TS errors between different app tsconfigs
	]
}
