	"author": {
		"name": "BjÃ¶rn Kohnen",
		"email": "bjoern@vcmuellheim.de"
	},
	"scripts": {
		"dev": "next dev -p 3080",
		"build": "next build",
		"start": "node server.js",
		"deploy": "bash scripts/deploy.sh",
		"biome": "biome check --write",
		"lint": "biome lint --write",
		"next-lint": "next lint",
		"payload-migrate": "bunx payload migrate:create",
		"sams:swagger": "curl -s 'https://www.volleyball-baden.de/api/v2/swagger.json' | sed 's/application\\/hal+json/application\\/json/g' | jq '.' > './data/sams/swagger.json'",
		"sams:generate": "bunx openapi-zod-client './data/sams/swagger.json' -o './data/sams/client.ts' --base-url='https://www.volleyball-baden.de/api/v2/' --api-client-name='sams' --export-schemas --export-types",
		"sams:update": "bun run sams:swagger && bun run sams:generate",
		"container:build": "podman build -t vcmuellheim .",
		"container:watch": "podman run -p 3080:3080 -v $(pwd):/app -w /app vcmuellheim",
		"container:run": "podman run -p 3080:3080 vcmuellheim",
		"container": "bun run podman:build && bun run podman:run",
		"container:dev": "bun run podman:build && bun run podman:watch"
	},
