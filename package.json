		"@mantine/hooks": "^8.3.0",
		"@payloadcms/db-postgres": "3.54.0",
		"@payloadcms/email-resend": "3.54.0",
		"@payloadcms/live-preview-react": "3.54.0",
		"@payloadcms/next": "3.54.0",
		"@payloadcms/richtext-lexical": "3.54.0",
		"@payloadcms/storage-s3": "3.54.0",
		"@payloadcms/translations": "3.54.0",
		"@plaiceholder/next": "^3.0.0",
		"@sentry/nextjs": "^10.10.0",
		"@tanstack/react-query": "^5.90.10",
		"@trpc/client": "^11.7.1",
		"@trpc/react-query": "^11.7.1",
		"@trpc/server": "^11.7.1",
		"bun-types": "^1.2.21",
		"croner": "^9.0.0",
		"dayjs": "^1.11.18",
		"dumb-csv": "^1.1.2",
		"feed": "^5.1.0",
		"graphql": "^16.11.0",
		"jsonwebtoken": "^9.0.2",
		"jwks-rsa": "^3.2.0",
		"next": "15.5.2",
		"num-words-de": "^1.1.0",
		"payload": "3.54.0",
		"plaiceholder": "^3.0.0",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"react-fast-marquee": "^1.6.5",
		"react-icons": "^5.5.0",
		"react-world-flags": "^1.6.0",
		"sharp": "^0.34.2",
