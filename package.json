{
	"name": "vcmuellheim.de",
	"version": "2.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/cms"
	],
	"homepage": "https://vcmuellheim.de",
	"bugs": {
		"url": "https://github.com/terijaki/vcmuellheim/issues"
	},
	"author": {
		"name": "Bj√∂rn Kohnen",
		"email": "bjoern@vcmuellheim.de"
	},
	"scripts": {
		"dev": "next dev -p 3080",
		"dev:cms": "bun --filter @vcmuellheim/cms dev",
		"build": "next build",
		"build:cms": "bun --filter @vcmuellheim/cms build",
		"start": "node server.js",
		"deploy": "bash scripts/deploy.sh",
		"deploy-podman": "bash scripts/deploy-podman.sh",
		"lint": "biome lint",
		"biome": "biome check",
		"biome:fix": "biome --write",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:auth": "bun run scripts/test-auth.ts",
		"check:all": "bun run biome --fix && bun run typecheck && bun run test",
		"payload-migrate": "bunx payload migrate:create",
		"sams:update": "bash scripts/update-sams-swagger.sh && openapi-ts --file='sams-api.config.ts'",
		"container:build": "podman build -t vcmuellheim .",
		"container:watch": "podman run -p 3080:3080 -v $(pwd):/app -w /app vcmuellheim",
		"container:run": "podman run -p 3080:3080 vcmuellheim",
		"container": "bun run podman:build && bun run podman:run",
		"container:dev": "bun run podman:build && bun run podman:watch",
		"cdk": "cdk --profile vcmuellheim",
		"cdk:deploy": "cdk deploy --all --profile vcmuellheim --require-approval=never",
		"cdk:deploy:prod": "CDK_ENVIRONMENT=prod cdk deploy --all --profile vcmuellheim",
		"cdk:synth": "cdk synth --all --profile vcmuellheim",
		"cdk:synth:prod": "CDK_ENVIRONMENT=prod cdk synth --all --profile vcmuellheim",
		"cdk:diff": "cdk diff --all --profile vcmuellheim",
		"cdk:diff:prod": "CDK_ENVIRONMENT=prod cdk diff --all --profile vcmuellheim",
		"cdk:destroy": "cdk destroy --all --profile vcmuellheim --require-approval=never",
		"cdk:destroy:prod": "CDK_ENVIRONMENT=prod cdk destroy --all --profile vcmuellheim",
		"cdk:bootstrap": "cdk bootstrap --profile vcmuellheim"
	},
	"dependencies": {
		"@aws-sdk/client-cognito-identity-provider": "^3.936.0",
		"@aws-sdk/client-dynamodb": "^3.936.0",
		"@aws-sdk/lib-dynamodb": "^3.936.0",
		"@hey-api/client-next": "^0.5.1",
		"@mantine/core": "^8.3.0",
