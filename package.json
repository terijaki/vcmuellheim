	"scripts": {
		"dev": "next dev -p 3080",
		"build": "next build",
		"start": "node server.js",
		"deploy": "bash scripts/deploy.sh",
		"deploy-podman": "bash scripts/deploy-podman.sh",
		"biome": "biome check",
		"lint": "biome lint --write",
		"next-lint": "eslint .",
		"payload-migrate": "bunx payload migrate:create",
		"sams:update": "openapi-ts --file='sams-api.config.ts'",
		"container:build": "podman build -t vcmuellheim .",
		"container:watch": "podman run -p 3080:3080 -v $(pwd):/app -w /app vcmuellheim",
		"container:run": "podman run -p 3080:3080 vcmuellheim",
		"container": "bun run podman:build && bun run podman:run",
		"container:dev": "bun run podman:build && bun run podman:watch",
		"cdk": "cdk --profile vcmuellheim",
		"cdk:deploy": "cdk deploy --profile vcmuellheim",
		"cdk:synth": "cdk synth --profile vcmuellheim",
		"cdk:diff": "cdk diff --profile vcmuellheim",
		"cdk:destroy": "cdk destroy --profile vcmuellheim",
		"cdk:bootstrap": "cdk bootstrap --profile vcmuellheim"
	},
