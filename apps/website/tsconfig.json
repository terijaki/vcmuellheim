{
	// "extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false,
		"jsx": "react-jsx",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"noEmit": true,

		/* Types */
		"types": ["vite/client"],

		/* Path aliases */
		"baseUrl": "../..",
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["lib/*"],
			"@lambda/*": ["lambda/*"],
			"@utils/*": ["utils/*"],
			"@data/*": ["data/*"],
			"@codegen/*": ["codegen/*"],
			"@project.config": ["project.config.ts"],
			"@apps/shared": ["apps/shared/*"]
		}
	},
	"include": ["src"],
	"exclude": ["@codegen/**", "../../codegen/**"]
}
